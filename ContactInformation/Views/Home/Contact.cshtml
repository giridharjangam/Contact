
@{
    ViewBag.Title = "Contact List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    <link href="~/Styles/Style.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/App/app.js"></script>
}

<div ng-app="demoModule" id="body">
    <div ng-controller="demoCtrl">
        <h2>Contact Information Details </h2>

        <h3>List of Contact</h3>

        <table ng-cloak>
            <thead>
                <tr>
                    <th style="display: none;">ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="items in productsData">
                    <td hidden="hidden">{{items.Id}}</td>
                    <td>{{items.FirstName}}</td>
                    <td>{{items.LastName}}</td>
                    <td>{{items.Email}}</td>
                    <td>{{items.Phone}}</td>
                    <td>
                        <button ng-model="$scope.Product" ng-click="edit(productsData[$index])">Edit</button>
                        <button ng-click="delete($index)">Delete</button>
                    </td>
                </tr>
            </tbody>
            
        </table>
        <br />

        <div style="border-top: solid 2px #282828; width: 430px; height: 10px"> </div>

        <div ng-show="Product.Id != '' ">
            <div>
                <h2>Update Contact</h2>
            </div>
            <div hidden="hidden">
                <label for="id">Id</label>
                <input type="text" data-ng-model="Product.Id" />
            </div>
            <div>
                <label for="fname">FirstName</label>
                <input type="text" data-ng-model="Product.FirstName" />
            </div>

            <div>
                <label for="lname">LastName</label>
                <input type="text" data-ng-model="Product.LastName" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="text" data-ng-model="Product.Email" />
            </div>
            <div>
                <label for="phone">Phone</label>
                <input type="text" data-ng-model="Product.Phone" />
            </div>
            @*<div>
                <label for="status">Status</label>
                <select>
                    <option  value="{{Product.Status}}">Active</option>
                    <option  value="{{Product.Status}}">InActive</option>
                </select>
            </div>*@
            <br />
            <div>
                <button data-ng-click="update()">Update</button>
                <button data-ng-click="cancel()">Cancel</button>
            </div>
        </div>

        <div ng-hide="Product.Id != '' ">
            <div>
                <h2>Add New Contact</h2>
            </div>
            <div>
                <label for="fname">Name</label>
                <input type="text" data-ng-model="Product.FirstName" />
            </div>

            <div>
                <label for="lname">LastName</label>
                <input type="text" data-ng-model="Product.LastName" />
            </div>

            <div>
                <label for="email">Email</label>
                <input type="text" data-ng-model="Product.Email" />
            </div>
            <div>
                <label for="phone">Phone</label>
                <input type="text" data-ng-model="Product.Phone" />
            </div>
            @*<div>
                <label for="status">Status</label>
                <select>
                    <option data-ng-model="Product.Status" value="1">Active</option>
                    <option data-ng-model="Product.Status" value="0">InActive</option>
                </select>
            </div>*@
            <br />
            <div>
                <button data-ng-click="save()">Save</button>
                <button data-ng-click="clear()">Clear</button>
            </div>
        </div>
       
    </div>
</div>
